@model ds.NorthwindApp.Web.ViewModels.PaginationViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomersData.FirstOrDefault().CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomersData.FirstOrDefault().ContactName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomersData.FirstOrDefault().ContactTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomersData.FirstOrDefault().Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomersData.FirstOrDefault().City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomersData.FirstOrDefault().Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomersData.FirstOrDefault().PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomersData.FirstOrDefault().Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomersData.FirstOrDefault().Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomersData.FirstOrDefault().Fax)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CustomersData)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Region)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fax)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div>
    <ul class="pagination">
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a asp-action="Index" asp-route-page="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</div>